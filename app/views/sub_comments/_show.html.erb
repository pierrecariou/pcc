<%if @comment_selected.sub_comments.last.id - 1 == sub_comment.id %>
  <div id="anchor-sub-com"></div>
<%end %>
<div class="user-sub-comment-card">
<div class="linebetween-10"></div>
  <div class="user-display">
    <div class="avatar">
      <%= link_to user_path(sub_comment.user) do %>
        <%=image_tag(sub_comment.user.photo_url) %>
      <% end %>
    </div>
    <div class="user-input">
      <div class="user-info">
        <%= link_to user_path(sub_comment.user) do %>
          <%= sub_comment.user.first_name%> <%= sub_comment.user.last_name%>, <%= sub_comment.user.activity %>

        <% end %>
      </div>
          <p class="comment-date">Partag√© le <%=sub_comment.date %></p>
    </div>
  </div>
  <div class="user-comment-data">
    <p class="title-comment"> <%= sub_comment.title %></p>
    <p class="text-comment"> <%= sub_comment.text %></p>
    <p class="source">
      <%if sub_comment.source.present? %>
          Source :
        <a href="<%= sub_comment.source %>">
          <%= URI.parse(sub_comment.source.strip).host %>
        </a>
      <%end %>
    </p>
    <div class="flex-title-comment">
     <div data-sub-comment-arrow="<%= sub_comment.id %>"><%= link_to '<i class="fas fa-caret-up"></i>'.html_safe, like_sub_comment_path(sub_comment), method: :put, remote: :true%></div>
     <div><%= sub_comment.stars %></div>
     </div>
  </div>
</div>
